<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.admin.travellappproject.cityshorting">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/tv"
        android:textSize="30dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/tvsort"
        android:textSize="30dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="10dp"
            android:layout_margin="10dp"
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="#e1d8d8">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp">

                    <TextView
                        android:id="@+id/txtid"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="City Id"
                        android:textColor="@color/colorPrimary"
                        android:textSize="20dp"
                        android:textStyle="bold" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="City Name"
                        android:textColor="#000000"
                        android:textSize="20dp"
                        android:layout_marginTop="10dp"
                        android:id="@+id/txtname"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="City Description"
                        android:textColor="#000000"
                        android:textSize="20dp"
                        android:layout_marginTop="10dp"
                        android:id="@+id/txtcitydesc"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/txtloc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Location 1"
                        android:textColor="#000000"
                        android:textSize="20dp"
                        android:layout_marginTop="10dp"
                        android:textStyle="bold" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Location Places"
                        android:textColor="#000000"
                        android:textSize="20dp"
                        android:layout_marginTop="10dp"
                        android:id="@+id/txtlocplaces"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Location Timing"
                        android:textColor="#000000"
                        android:textSize="20dp"
                        android:layout_marginTop="10dp"
                        android:id="@+id/txtloctime"
                        android:textStyle="bold"/>
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</LinearLayout>
